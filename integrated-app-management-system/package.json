{
  "name": "smart-template-folder",
  "version": "2.0.0",
  "description": "スマート単一フォルダ構成テンプレート - 動的モジュール読み込み対応",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node -e \"console.log('スマートテンプレート テスト実行完了')\"",
    "logs": "ls -la logs/",
    "clean-logs": "rm -rf logs/*.json",
    "reset": "rm -rf logs/ && mkdir logs",
    "config": "cat config.json"
  },
  "keywords": [
    "nodejs",
    "express",
    "firebase",
    "smart-template",
    "module-loader",
    "backward-compatibility",
    "csv-export",
    "money-management",
    "time-management", 
    "weight-management"
  ],
  "author": "Claude AI",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}